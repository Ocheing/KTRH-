{
  "kind": "collectionType",
  "collectionName": "gallery_items",
  "info": {
    "singularName": "gallery-item",
    "pluralName": "gallery-items",
    "displayName": "Gallery-item"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "events",
        "facilities",
        "team",
        "achievements",
        "community",
        "videos"
      ]
    },
    "mediaType": {
      "type": "enumeration",
      "enum": [
        "image",
        "video"
      ]
    },
    "date": {
      "type": "date"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "thumbnail": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "isFeatured": {
      "type": "boolean"
    },
    "tags": {
      "type": "json"
    },
    "videoUrl": {
      "type": "text",
      "regex": "^(https?\\:\\/\\/)?(www\\.)?(youtube\\.com|youtu\\.?be)\\/.+$"
    }
  }
}
