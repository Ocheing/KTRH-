{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "department": {
      "type": "enumeration",
      "enum": [
        "medical",
        "nursing",
        "admin",
        "technical",
        "other"
      ]
    },
    "jobType": {
      "type": "enumeration",
      "enum": [
        "full-time",
        "part-time",
        "contract",
        "internship"
      ]
    },
    "location": {
      "type": "string"
    },
    "description": {
      "type": "blocks"
    },
    "requirements": {
      "type": "json"
    },
    "qualifications": {
      "type": "json"
    },
    "benefits": {
      "type": "json"
    },
    "deadline": {
      "type": "date"
    },
    "salaryRange": {
      "type": "string"
    },
    "experienceLevel": {
      "type": "enumeration",
      "enum": [
        "entry",
        "mid",
        "senior"
      ]
    },
    "isActive": {
      "type": "boolean"
    },
    "applicationLink": {
      "type": "string"
    },
    "postedDate": {
      "type": "date"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
